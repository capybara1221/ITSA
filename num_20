#include <stdio.h>
#include <string.h>
#include <math.h>
#include <ctype.h>

// 20
// 基礎題目34： 標準體重計算
int main(void)
{
    int h,g;
    while(scanf("%d %d",&h,&g) != EOF)
    {
        if(g==1)
        {
            //(身高－80 )*0.7
            printf("%.1f\n",(h-80)*0.7);
        }
        else
            printf("%.1f\n",(h-70)*0.6);
                //(身高－70)*0.6
    }
}
